# Database (Supabase)
DATABASE_URL="postgresql://postgres:password@localhost:54322/postgres"
DIRECT_URL="postgresql://postgres:password@localhost:54322/postgres"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# NextAuth
# NEXTAUTH_URL: Set this to the URL where your app is accessible
#
# Development: Optional (auto-detects from Host header for convenience)
#   - Works with localhost, LAN IPs, etc. without configuration
#
# Production/Self-Hosted: REQUIRED for security
#   - Set to your server's public URL
#   - Examples:
#     - Home server on LAN: http://192.168.1.100:3000
#     - Cloud server: http://your-ip:3000
#     - Domain with SSL: https://finnberry.yourdomain.com
#
# SECURITY: Always set this explicitly when exposing to the internet
# to prevent Host header injection attacks
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"

# Google OAuth (optional - leave empty to disable)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email (for magic link)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email"
EMAIL_SERVER_PASSWORD="your-password"
EMAIL_FROM="noreply@finnberry.app"
